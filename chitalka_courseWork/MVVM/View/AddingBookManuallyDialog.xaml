<Window x:Class="chitalka_courseWork.MVVM.View.AddingBookManuallyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Adding Book Manually" Height="300" Width="200"
        >
    
    <Grid>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <StackPanel Margin="10">
                <TextBlock Text="Title:"/>
                <TextBox Name="TitleTextBox"/>
            </StackPanel>
            <StackPanel Margin="10">
                <TextBlock Text="Author:"/>
                <TextBox Name="AuthorTextBox"/>
            </StackPanel>
            <StackPanel Margin="10">
                <TextBlock Text="Pages amount:"/>
                <TextBox Name="PagesAmountTextBox"/>
            </StackPanel>
            <Button Name="SaveButton"
                    Click="SaveButton_Click"
                Content="Save" Margin="10"/>

        </StackPanel>

    </Grid>
</Window>
