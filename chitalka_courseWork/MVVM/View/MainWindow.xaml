<Window x:Class="chitalka_courseWork.MVVM.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:chitalka_courseWork.MVVM.View"
        xmlns:local="clr-namespace:chitalka_courseWork"
        xmlns:viewModel="clr-namespace:chitalka_courseWork.MVVM.ViewModel"
        mc:Ignorable="d"
        Height="600" Width="920" 
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">
    <WindowChrome.WindowChrome>
        <WindowChrome ResizeBorderThickness="6" UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>
    <Border Background="#161A30" Name="border"
            CornerRadius="20">
        <views:MainView/>
    </Border>
</Window>