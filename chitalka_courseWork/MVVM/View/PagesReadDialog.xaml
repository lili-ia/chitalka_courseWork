<Window x:Class="chitalka_courseWork.MVVM.View.PagesReadDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pages Read" Height="240" Width="400"
        ResizeMode="NoResize">

    <Grid Background="#161A30">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Pages read:" Foreground="White" FontSize="16"/>
            <TextBox x:Name="PagesReadTextBox" Margin="0,10,0,0" Width="184"/>
            <Button HorizontalAlignment="Center" Content="OK" Width="60" Margin="5" Click="OK_Click" FontSize="14" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>

