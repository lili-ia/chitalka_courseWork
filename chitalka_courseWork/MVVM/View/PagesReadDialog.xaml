<Window x:Class="chitalka_courseWork.MVVM.View.PagesReadDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pages Read" Height="240" Width="400"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0">
            <TextBlock Text="Ваша сесія читання тривала"/>
            <TextBlock Text="{Binding}"/>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock Text="Сторінок прочитано:"/>
            <TextBox x:Name="PagesReadTextBox" Margin="0,10,0,0" Width="184"/>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="OK" Background="Aqua" Width="60" Margin="5" Click="OK_Click" FontSize="14"/>
        </StackPanel>
        
    </Grid>
</Window>

